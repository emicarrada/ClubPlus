{
  "name": "clubplus-mvp",
  "version": "1.0.0",
  "description": "Club+ MVP - Plataforma de combos de streaming compartidos",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:backend",
    "build:backend": "cd apps/backend && npm run build",
    "start": "cd apps/backend && npm run start",
    "test": "npm run test:backend",
    "test:backend": "cd apps/backend && npm run test",
    "lint": "npm run lint:backend",
    "lint:fix": "npm run lint:fix:backend",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:fix:backend": "cd apps/backend && npm run lint:fix",
    "db:migrate": "cd packages/prisma && npx prisma migrate dev",
    "db:seed": "cd packages/prisma && npx prisma db seed",
    "db:reset": "cd packages/prisma && npx prisma migrate reset",
    "db:studio": "cd packages/prisma && npx prisma studio",
    "clean": "npm run clean:backend && npm run clean:deps",
    "clean:backend": "cd apps/backend && rm -rf dist && rm -rf node_modules",
    "clean:deps": "rm -rf node_modules",
    "install:all": "npm install && npm run install:backend && npm run install:prisma",
    "install:backend": "cd apps/backend && npm install",
    "install:prisma": "cd packages/prisma && npm install"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "concurrently": "^8.2.0",
    "typescript": "^5.8.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0"
  }
}
