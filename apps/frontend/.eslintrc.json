{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "globals": {
    "React": "readonly",
    "global": "readonly",
    "ImportMeta": "readonly"
  },
  "ignorePatterns": [
    "dist",
    ".eslintrc.cjs",
    "*.config.js",
    "*.config.ts",
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.d.ts"
  ],
  "rules": {
    "prefer-const": "error",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ]
  }
}
