{
  "root": false,
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["eslint:recommended"],
  "ignorePatterns": [
    "dist",
    ".eslintrc.cjs",
    "*.config.js",
    "*.config.ts",
    "node_modules"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ]
  }
}
